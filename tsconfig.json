{
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"lib": ["dom", "es6", "es2018", "esnext.asynciterable"],
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"paths": {
			"src/*": ["src/*"]
		},
		"typeRoots": ["/src/types", "/node_modules/@types"],
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true, // TypeGraphQL https://typegraphql.com/docs/installation.html
		"allowSyntheticDefaultImports": true, // TypeGraphQL https://typegraphql.com/docs/installation.html
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
